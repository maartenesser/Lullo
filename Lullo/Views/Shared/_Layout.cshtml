<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Lullo - De Studenten Site</title>
    
   
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <style>
        body { padding-top: 60px; }
        .aligntobottom{ bottom: 0; position: absolute; }
     </style>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Lullo", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})        
          </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                @if (Session["UserID"] == null)
                {
                    <li>@Html.ActionLink("Register", "Create", "User")</li>
                }

                @*Shows Grocery List, Account only if you are logged in
        Shows Users only if you are logged in and you are a Admin*@
                @if (Session["UserID"] != null)
                {
                    <li>@Html.ActionLink("Grocery List", "Index", "Groceries")</li>
                    <li>@Html.ActionLink("Recipe List", "Index", "Recipies")</li>
                    <li>@Html.ActionLink("Account", "LoggedIn", "User")</li>

                    if ((bool)Session["IsAdmin"])
                    {
                        <li>@Html.ActionLink("Users", "Index", "User")</li>
                    }
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Login", "Login", "User")</li>
                <li>@Html.ActionLink("Log Out", "Logout", "User")</li>
            </ul>

        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Lullo de studenten site</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
